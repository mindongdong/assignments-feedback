# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/assignments_feedback?schema=public"
DATABASE_HOST="localhost"
DATABASE_PORT="5432"
DATABASE_NAME="assignments_feedback"
DATABASE_USER="postgres"
DATABASE_PASSWORD="your_password"

# Redis Configuration
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD=""
REDIS_TTL_DEFAULT="300"

# Discord Bot Configuration
DISCORD_TOKEN="your_discord_bot_token"
DISCORD_CLIENT_ID="your_discord_client_id"
DISCORD_GUILD_ID="your_discord_guild_id"

# AI Service Configuration
OPENAI_API_KEY="your_openai_api_key"
ANTHROPIC_API_KEY="your_api_key"
AI_MODEL_PREFERENCE="claude" # claude or openai
AI_CLAUDE_MODEL=""
AI_OPENAI_MODEL=""
AI_MAX_TOKENS="2000"
AI_TEMPERATURE="0.3"

# Application Configuration
NODE_ENV="development"
PORT="3000"
LOG_LEVEL="info"
JWT_SECRET="your_jwt_secret"

# Korean Language Support
LOCALE="ko_KR.UTF-8"
TIMEZONE="Asia/Seoul"
DEFAULT_LANGUAGE="ko"

# Performance Monitoring
ENABLE_PERFORMANCE_LOGGING="true"
SLOW_QUERY_THRESHOLD="100"
PERFORMANCE_LOG_RETENTION_DAYS="30"

# Cache Configuration
CACHE_ASSIGNMENT_TTL="1800"    # 30 minutes
CACHE_USER_TTL="3600"          # 1 hour
CACHE_SUBMISSION_TTL="900"     # 15 minutes
CACHE_FEEDBACK_TTL="7200"      # 2 hours

# Rate Limiting
RATE_LIMIT_WINDOW="900000"     # 15 minutes in ms
RATE_LIMIT_MAX_REQUESTS="100"  # Max requests per window
RATE_LIMIT_DISCORD_MAX="50"    # Max Discord commands per window

# File Upload Configuration
MAX_FILE_SIZE="10485760"       # 10MB in bytes
ALLOWED_FILE_TYPES="md,txt,js,ts,html,css,json"

# GitHub Integration (optional)
GITHUB_TOKEN="your_github_token"
GITHUB_WEBHOOK_SECRET="your_webhook_secret"

# Monitoring and Alerts
ALERT_EMAIL=""
ALERT_WEBHOOK_URL=""
ENABLE_HEALTH_CHECKS="true"
HEALTH_CHECK_INTERVAL="60000"  # 1 minute in ms

# Development Tools
ENABLE_SWAGGER_UI="true"
ENABLE_GRAPHQL_PLAYGROUND="false"
CORS_ORIGIN="http://localhost:3000,http://localhost:3001"

# Production Optimizations
DB_CONNECTION_POOL_MIN="2"
DB_CONNECTION_POOL_MAX="10"
DB_CONNECTION_TIMEOUT="10000"
DB_IDLE_TIMEOUT="30000"

# Security
HELMET_ENABLED="true"
CORS_CREDENTIALS="true"
TRUST_PROXY="false"